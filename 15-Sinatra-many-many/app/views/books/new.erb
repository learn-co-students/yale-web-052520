<h4> Form to create a book: </h4>

<form action="/books" method="post">

 <label> Title: </label>
 <input type="text" name="book[title]" />

<br/> 

 <label> Year: </label>
 <input type="text" name="book[year]" />

<br/> 

<label> Authors: </label>
<% @authors.each do |author| %>
    <br/>
    <!--    <input type= "checkbox" name="authors[]" value="<%= author %>" /> # didn't work-->

   <input type= "checkbox" name="authors[id][]" value="<%= author.id %>" /> 

    <%= author.name %>
    <br/>

<% end %>

<label>New Author: </label>
<% 3.times do %>
    <input type="text" name="authors[names][]"/>
<% end %>


 <input type="submit" value="Create book">

</form>